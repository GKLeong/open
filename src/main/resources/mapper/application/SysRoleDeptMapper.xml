<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spyker.application.mapper.SysRoleDeptMapper">
    
    <select id="query" resultType="com.spyker.application.entity.SysRoleDept" parameterType="com.spyker.application.search.SysRoleDeptSearch">
        SELECT a.* FROM sys_role_dept a
        <where>
            <if test="null != roleId ">
                and a.role_id = #{roleId}
            </if>
            <if test="null != deptId ">
                and a.dept_id = #{deptId}
            </if>
        </where>
    </select>
    
    <select id="queryPage" resultType="com.spyker.application.entity.SysRoleDept" parameterType="com.spyker.application.search.SysRoleDeptSearch">
        SELECT a.* FROM sys_role_dept a
        <where>
            <if test="null != roleId ">
                and a.role_id = #{roleId}
            </if>
            <if test="null != deptId ">
                and a.dept_id = #{deptId}
            </if>
        </where>
    </select>

</mapper>